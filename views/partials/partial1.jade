div(ng-controller='MyCtrl1', ng-init='getNotesLength()')

  div(class='row')
    .container
      div(ng-show='busy', class='col-md-offset-4', style='position:fixed; z-index:10; bottom:0;')
        p(style="font-size:40px;")
         | Loading data...
      div(style='position: fixed; z-index: 10; background-color: #eee; left: 0; width: 100%;', ng-style='bottomShadow')
        .col-md-6.col-md-offset-3(style='padding-top: 22px; padding-bottom: 15px;')
          input(style='width:100%;', type='text', ng-model='query.sentence')
      div(class='row ng-cloak', style='padding-top: 5em;', infinite-scroll='loadMore(limit)', infinite-scroll-disabled='endOfLine')
        div(ng-repeat='note in notes | filter: query')
          div(class='col-md-4 item', style='margin-bottom: 20px;', ng-animate="{enter: 'animate-enter'}")
            div(class='container')
              div(class='col-md-12 col-xs-12 noteStyle', ng-mouseover='showIcon($index)', ng-mouseleave='hideIcon($index)')
                div(class='row')
                  div(class='col-md-12 note-tag-bar', ng-style='barColor($index)')
                    div(class='row ng-cloak', ng-show='note.show == true', ng-animate="{show: 'fadeIn'}")
                        span.glyphicon.glyphicon-edit.edit-icon(ng-click='')
                        span.glyphicon.glyphicon-trash.edit-delete(ng-click="deleteNote($index)")
                div(class='row')
                  p
                    | {{note.sentence}}
